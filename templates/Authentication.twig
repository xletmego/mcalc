<!doctype html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Login</title>

    {{ block("styles", "styles.twig") }}

    <style>
        .center-page {
            display: flex;
            flex-direction: row;
            flex-wrap: nowrap;
            justify-content: center;
            align-items: center;
            align-content: center;
            width: 100%;
            height: 100vh;
        }
    </style>

</head>
<body>
    <div class="center-page">
        <form method="post" action="/">
            <div>
                <div>
                    <label for="login">Login</label>
                </div>
                <div>
                    <input name="login" type="text" value="">
                </div>
            </div>
            <div>
                <div>
                    <label for="password">Password</label>
                </div>
                <div>
                    <input name="password" type="password" value="">
                </div>
            </div>
            <div>
                <button type="submit">
                    Sing in
                </button>
            </div>
        </form>
    </div>
</body>
</html>